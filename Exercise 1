#include <stdio.h>
#include <limits.h>

int minNumber(int *vec, int d){
    int min = INT_MAX;
        for (int i = 0; i < d; i++) {     
         if(vec[i] < min) 
             min = vec[i];
        } 
        return min;
}

int main()
{
    int vec[] = {1,2,3,7};
    minNumber(vec,4);
    int result = minNumber(vec,4);
    
    printf("The lowest value is %i", result);
    
    return 0;
}
