#include <stdio.h>

int main() {
    
    int mat[10][10];
    int *ptr_mat;
    ptr_mat = mat[0];
    int i = 0;
    int j = 0;
    
    for(i=0;i<100;i++) {
        ptr_mat[i] = 0;
    }
    
    for(i=0;i<100;i++) {
        ptr_mat[i] = i+1;
    }
    
    for(i=0;i<10;i++) {
        printf("\n");
        for(j=0;j<10;j++) {
            printf("%d ",mat[i][j]);
        }
    }
    
    return 0;   
}
